@model IEnumerable<MyProject.Models.Executor>

<h1>Справочник "Исполнители"</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>ФИО исполнителя</th>
            <th>Номер телефона</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.PhoneNumber</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })">Изменить</a> |
                <a href="@Url.Action("Delete", new { id = item.Id })">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Добавить нового исполнителя</a>
<a href="@Url.Action("Dashboard", "Auth")" class="btn btn-secondary">Назад</a>
