@model MyProject.Models.RequestJournal

<h1>Добавить новую заявку</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="RequestDate" class="control-label">Дата заявки</label>
        <input asp-for="RequestDate" class="form-control" />
        <span asp-validation-for="RequestDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ApartmentNumber" class="control-label">Номер квартиры</label>
        <input asp-for="ApartmentNumber" class="form-control" />
        <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HouseId" class="control-label">ID дома</label>
        <select asp-for="HouseId" asp-items="ViewBag.HouseId" class="form-control"></select>
        <span asp-validation-for="HouseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClientName" class="control-label">Имя клиента</label>
        <input asp-for="ClientName" class="form-control" />
        <span asp-validation-for="ClientName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClientPhone" class="control-label">Телефон клиента</label>
        <input asp-for="ClientPhone" class="form-control" />
        <span asp-validation-for="ClientPhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProblemDescription" class="control-label">Описание проблемы</label>
        <input asp-for="ProblemDescription" class="form-control" />
        <span asp-validation-for="ProblemDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes" class="control-label">Примечания</label>
        <input asp-for="Notes" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RequestStatusId" class="control-label">Статус заявки</label>
        <select asp-for="RequestStatusId" asp-items="ViewBag.RequestStatusId" class="form-control"></select>
        <span asp-validation-for="RequestStatusId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RequestTypeId" class="control-label">Тип заявки</label>
        <select asp-for="RequestTypeId" asp-items="ViewBag.RequestTypeId" class="form-control"></select>
        <span asp-validation-for="RequestTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsUrgent" class="control-label">Срочная заявка</label>
        <select asp-for="IsUrgent" class="form-control">
            <option value="true">Да</option>
            <option value="false">Нет</option>
        </select>
        <span asp-validation-for="IsUrgent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RequiresClientPresence" class="control-label">Требуется присутствие клиента</label>
        <select asp-for="RequiresClientPresence" class="form-control">
            <option value="true">Да</option>
            <option value="false">Нет</option>
        </select>
        <span asp-validation-for="RequiresClientPresence" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExecutorId" class="control-label">ID исполнителя</label>
        <select asp-for="ExecutorId" asp-items="ViewBag.ExecutorId" class="form-control"></select>
        <span asp-validation-for="ExecutorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Назад</a>
