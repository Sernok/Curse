@model MyProject.Models.RequestJournal

<h1>Удалить запись</h1>

<div>
<h4>Вы уверены, что хотите удалить эту запись?</h4>
<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Статус заявки</dt>
    <dd class="col-sm-10">@Model.RequestStatus?.StatusName</dd>
    <dt class="col-sm-2">Тип заявки</dt>
    <dd class="col-sm-10">@Model.RequestType?.TypeName</dd>
</dl>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <!-- другие поля формы -->
    <input type="hidden" name="requestStatusId" value="@Model.RequestStatusId" />
    <input type="hidden" name="requestTypeId" value="@Model.RequestTypeId" />
    <input type="submit" value="Удалить" class="btn btn-danger" /> |
    <a href="@Url.Action("Index")" class="btn btn-secondary">Назад</a>
</form>
