@model IEnumerable<MyProject.Models.House>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<h1>Справочник "Дома"</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Улица</th>
            <th>Номер дома</th>
            <th>На нашем управлении</th>
            <th>Есть договор со сторонней УК</th>
            <th>Сторонняя УК</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Street</td>
            <td>@item.HouseNumber</td>
            <td>@item.IsManagedByUs</td>
            <td>@item.HasExternalManagementContract</td>
            <td>@item.ExternalManagementCompany?.CompanyName</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })">Изменить</a> |
                <a href="@Url.Action("Delete", new { id = item.Id })">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Добавить новый дом</a>
<a href="@Url.Action("Dashboard", "Auth")" class="btn btn-secondary">Назад</a>
