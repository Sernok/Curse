@model MyProject.Models.House

<h1>Редактировать дом</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseNumber" class="control-label"></label>
                <input asp-for="HouseNumber" class="form-control" />
                <span asp-validation-for="HouseNumber" class="text-danger"></span>
            </div>
            <!-- Updated to use ViewData instead of ViewBag -->
            <div class="form-group">
                <label asp-for="ExternalManagementCompanyId" class="control-label"></label>
                <select asp-for="ExternalManagementCompanyId" class="form-control" asp-items="@ViewBag.ExternalManagementCompanyId">
                    <option value="">Выберите стороннюю управляющую компанию</option>
                </select>
                <span asp-validation-for="ExternalManagementCompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>
