@model IEnumerable<MyProject.Models.ExternalManagementCompany>

<h1>Справочник "Другие управляющие компании"</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Наименование компании</th>
            <th>Срок действия договора</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.CompanyName</td>
            <td>@item.ContractEndDate.ToShortDateString()</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })">Изменить</a> |
                <a href="@Url.Action("Delete", new { id = item.Id })">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Добавить новую компанию</a>
<a href="@Url.Action("Dashboard", "Auth")" class="btn btn-secondary">Назад</a>
