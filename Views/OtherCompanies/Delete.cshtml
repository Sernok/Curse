@model MyProject.Models.ExternalManagementCompany

<h1>Удалить компанию</h1>

<div>
    <h4>Вы уверены, что хотите удалить эту компанию?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Наименование компании
        </dt>
        <dd class="col-sm-10">
            @Model.CompanyName
        </dd>
        <dt class="col-sm-2">
            Срок действия договора
        </dt>
        <dd class="col-sm-10">
            @Model.ContractEndDate.ToShortDateString()
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" name="handler" value="DeleteConfirmed" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a href="@Url.Action("Index")" class="btn btn-secondary">Назад</a>
    </form>
</div>
